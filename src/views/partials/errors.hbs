{{#if error}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{errors}}
    <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

{{#each error}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close"></button>
</div>
{{/each}}